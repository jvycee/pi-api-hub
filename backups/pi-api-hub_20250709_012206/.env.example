# Pi API Hub Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
MCP_PORT=3001

# API Keys (Required)
HUBSPOT_API_KEY=your_hubspot_private_app_token_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security Configuration (CRITICAL for production)
ADMIN_API_KEY=your_super_secure_admin_api_key_here
CORS_ORIGINS=https://your-domain.com,https://another-domain.com
ENABLE_SECURITY_HEADERS=true
ENABLE_INPUT_VALIDATION=true

# AI Configuration
OLLAMA_BASE_URL=http://10.0.0.218:11434

# Performance Configuration - Pi 5 8GB Optimized
MAX_RESPONSE_SIZE=104857600
MAX_CONCURRENT_REQUESTS=25
MEMORY_WARNING_THRESHOLD=7516192768
MEMORY_CRITICAL_THRESHOLD=8053063680

# Cache Configuration - Pi 5 Optimized
CACHE_TTL=300000
CACHE_MAX_SIZE=25000
CACHE_MAX_MEMORY_MB=200

# JSON Optimizer - SSD Optimized
JSON_BASE_CHUNK_SIZE=2097152
JSON_MIN_CHUNK_SIZE=131072
JSON_MAX_CHUNK_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ADMIN_RATE_LIMIT_WINDOW_MS=900000
ADMIN_RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
LOG_DIRECTORY=./logs

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION=86400000
HEALTH_CHECK_INTERVAL=30000
AUTO_RESTART_ENABLED=true
AUTO_RESTART_MEMORY_THRESHOLD=8053063680
AUTO_RESTART_ERROR_THRESHOLD=10

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=5000
CACHE_MAX_MEMORY_MB=50

# Request Optimization
ENABLE_REQUEST_BATCHING=true
BATCH_SIZE=5
BATCH_TIMEOUT_MS=150
MAX_BATCH_WAIT_MS=2000
DEDUPLICATION_TTL=10000

# Webhook Configuration
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here
WEBHOOK_VALIDATE_SIGNATURE=true
WEBHOOK_ENABLE_LOGGING=true
WEBHOOK_MAX_BODY_SIZE=1048576

# Compression
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024