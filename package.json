{
    "name": "pi-api-hub",
    "version": "1.0.0",
    "description": "API Middleware and MCP Server for HubSpot and Anthropic APIs",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "start:cluster": "node cluster.js",
        "start:production": "NODE_ENV=production node --max-old-space-size=6144 cluster.js",
        "dev": "nodemon app.js",
        "dev:cluster": "nodemon cluster.js",
        "mcp": "node mcp-server/server.js",
        "test": "jest",
        "test:unit": "jest tests/unit/",
        "test:integration": "jest tests/integration/",
        "test:benchmarks": "BENCHMARK_MODE=true jest tests/benchmarks/",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "mark": "node bin/talk-to-mark.js",
        "chat": "node bin/talk-to-mark.js"
    },
    "keywords": [
        "api",
        "middleware",
        "mcp",
        "hubspot",
        "anthropic"
    ],
    "author": "jvycee",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.4.0",
        "axios": "^1.6.2",
        "bcryptjs": "^3.0.2",
        "chalk": "^5.4.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.1",
        "fs-extra": "^11.3.0",
        "jose": "^6.0.11",
        "node-cron": "^4.2.0",
        "qrcode": "^1.5.4",
        "speakeasy": "^2.0.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "middleware/**/*.js",
            "helpers/**/*.js",
            "monitoring/**/*.js",
            "shared/**/*.js",
            "app.js",
            "cluster.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ]
    }
}
